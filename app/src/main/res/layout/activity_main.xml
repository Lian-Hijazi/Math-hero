<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mathhero.MainActivity"
    android:background="@drawable/starting"
    >


    <FrameLayout
        android:id="@+id/home_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/rules_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/dash_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/signUp_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/details_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>


    <FrameLayout
        android:id="@+id/login_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/level1_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/level2_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/level3_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/level4_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/start"
        android:layout_width="270dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:text="let's start"
        android:textSize="50dp"
        android:layout_centerInParent="true" />


    <!-- الطبقة الخاصة بالبالونات -->
    <FrameLayout
        android:id="@+id/partyLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:background="@android:color/transparent"
        android:elevation="10dp"/>



</RelativeLayout>